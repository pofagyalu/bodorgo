{
  "name": "bodorgo",
  "version": "1.0.0",
  "description": "bodorgo server",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "app.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "start:prod": "SET NODE_ENV=production&&nodemon server.js",
    "lint": "eslint . --ext .js",
    "test": "vitest",
    "debug": "ndb server.js",
    "seed": "node -r dotenv/config ./src/seed.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js"
    ],
    "ext": "js,json,yaml"
  },
  "repository": {
    "type": "git",
    "url": "bodorgo"
  },
  "author": "Nagy Zolt√°n",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-xss-sanitizer": "^1.1.9",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.5",
    "vitest": "^1.2.2"
  }
}
