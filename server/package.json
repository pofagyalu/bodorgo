{
  "name": "bodorgo",
  "version": "1.0.0",
  "description": "bodorgo server",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "server.js",
  "scripts": {
    "lint": "eslint . --ext .js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci --collectCoverage --reporters=default",
    "test:cover": "jest --collectCoverage",
    "start": "nodemon --exec babel-node -r ./node_modules/dotenv/config src/server.js",
    "start:prod": "SET NODE_ENV=production&&nodemon server.js",
    "build": "babel src -d dist",
    "debug": "ndb server.js",
    "seed": "babel-node -r dotenv/config ./src/seeds.js"
  },
  "jest": {
    "testTimeout": 15000,
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js"
    ],
    "ext": "js,json,yaml"
  },
  "repository": {
    "type": "git",
    "url": "bodorgo"
  },
  "author": "Nagy Zolt√°n",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.9",
    "pug": "^3.0.2",
    "slugify": "^1.6.6",
    "stripe": "^14.18.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  }
}
